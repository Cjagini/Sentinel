// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  transactions Transaction[]
  alertRules   AlertRule[]

  @@map("users")
}

model Transaction {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  description String
  amount      Float
  category    String    // Will be populated by AI classification
  confidence  Float     @default(0) // Confidence score from AI
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([category])
  @@map("transactions")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique // Food, Transport, Utilities, Entertainment, Shopping
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("categories")
}

model AlertRule {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category  String   // Food, Transport, Utilities, Entertainment, Shopping
  threshold Float    // Maximum spend threshold
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, category])
  @@index([userId])
  @@map("alert_rules")
}
